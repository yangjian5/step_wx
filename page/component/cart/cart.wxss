@import '../../common/common.wxss';

.header{
    position: relative;
    height: 160rpx;
    line-height: 100rpx;
    padding:30rpx 30rpx 30rpx 150rpx;
    box-sizing: border-box;
    background: #635BA2;
    font-size: 28rpx;
    color: #fff;
}
.header .thumb{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.header .about{
    float: right;
}

.form-img{
    width: 660rpx; 
    height: 900rpx; 
    display:block; 
    margin:auto; 
    overflow:show;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    margin-top:50rpx;
}
.form-button{
    width:260rpx; 
    height:60rpx; 
    line-height: 60rpx; 
    margin-top:100rpx; 
    color: #fff;
    overflow:show;
    background-color: #635BA2;
    border-radius: 30rpx 30rpx 30rpx 30rpx;
}